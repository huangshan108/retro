<table>
  <tr>
    <th>Issue</th>
    <th>Votes</th>
  </tr>
  <% @issues.each do |issue| %>
  <tr>
    <td><%= issue.detail %></td>
    <td><%= issue.vote %></td>
  </tr>
  <% end %>
</table>

<div class="current-issue-container">
  <label>Current Issue</label>
  <div class="current-issue">
    <% if @current_issue %>
      <%= @current_issue.detail %>
      <%= render 'add_note', :current_issue => @current_issue %>
    <% else %>
      No More Issues!
    <% end %>
  </div>
</div>