<div class="stage">
  <%= link_to 'Show Me Report', report_stage_path(:session_id => @s.id, :name => @user.name), method: :post %>
</div>
<div class="issue-list-wrapper">
  <div class="subtitle">Issue List</div>
  <div class="issue-list">
    <% @issues.each do |issue| %>
      <% if issue.is_current %>
        <div class="issue-box current" data-session-id="<%= @s.id %>" data-issue-id="<%= issue.id %>">
      <% else %>
        <div class="issue-box" data-session-id="<%= @s.id %>" data-issue-id="<%= issue.id %>">
      <% end %>
      <span class="votes-count"><%= issue.vote %> <%= 'vote'.pluralize(issue.vote) %></span>
      <span class="issue-detail"><%= issue.detail %></span>
      </div>
    <% end %>
  </div>
</div>
<div class="current-issue-container">
  <%= render 'current_issue' %>
</div>