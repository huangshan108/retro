<% if session_id and user_name %>
  <%= render 'admin_panel', session_id: session_id, review: false %>
<% end %>
<div class="tips">
  <div class="subtitle">Tips for voting issues</div>
  <ul>
    <li>You have 5 votes in total.</li>
    <li>You are allowed to put all your votes on a single issue.</li>
    <li>You can only submit your vote once.</li>
    <li>You can't submit your vote if you have negative votes left.</li>
  </ul>
</div>

<div class="vote-counter">
<% if @user.voted? %>
  Vote submitted!
<% else %>
  You have <span>5</span> vote(s) left.
<% end %>
</div>
<div class="issue-list-wrapper">
  <%= render 'issue_list', :is_vote => true, :voted => @user.voted? %>
  <% if !@user.voted? %>
    <input type="submit" id="submit-vote" value="Submit" data-user-id="<%= @user.id %>" data-session-id="<%= @s.id %>">
  <% end %>
</div>
